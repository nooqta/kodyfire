{
  "compilerOptions": {
    "baseUrl": "tsconfig",
    "lib": ["es2021"],
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "rootDir": "src",
    "outDir": "build",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES6",
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["src/*/files/**/*", "node_modules"]
}
